{
  "name": "@confytome/markdown",
  "version": "1.4.2",
  "description": "Plugin for @confytome/core - generates Confluence-friendly Markdown documentation from OpenAPI specs using Mustache templates with Turkish Unicode support.",
  "main": "generate-markdown.js",
  "bin": {
    "markdown": "cli.js"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n-ae/confytome.git",
    "directory": "packages/markdown"
  },
  "bugs": {
    "url": "https://github.com/n-ae/confytome/issues"
  },
  "homepage": "https://github.com/n-ae/confytome/tree/main/packages/markdown#readme",
  "keywords": [
    "confytome-plugin",
    "markdown",
    "confluence",
    "mustache",
    "openapi",
    "api-documentation",
    "unicode",
    "turkish",
    "generator",
    "confytome"
  ],
  "author": "nae",
  "license": "MIT",
  "files": [
    "cli.js",
    "generate-markdown.js",
    "utils/",
    "templates/",
    "README.md"
  ],
  "scripts": {
    "test": "echo \"Tests in main confytome package\" && exit 0",
    "lint": "eslint . --ext .js",
    "format": "eslint . --ext .js --fix",
    "clean": "rm -rf docs/* .cache",
    "validate": "npm ls",
    "prepublishOnly": "npm run validate",
    "security:check": "npm audit",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "mustache": "^4.2.0"
  },
  "peerDependencies": {
    "@confytome/core": "^1.2.0"
  }
}
