{
  "name": "@confytome/markdown",
  "version": "1.7.16",
  "description": "Standalone Markdown generator - creates Confluence-friendly Markdown documentation from OpenAPI specs using Mustache templates with Turkish Unicode support.",
  "main": "standalone-generator.js",
  "bin": {
    "confytome-markdown": "./cli.js"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n-ae/confytome.git",
    "directory": "packages/markdown"
  },
  "bugs": {
    "url": "https://github.com/n-ae/confytome/issues"
  },
  "homepage": "https://github.com/n-ae/confytome/tree/main/packages/markdown#readme",
  "keywords": [
    "confytome-plugin",
    "markdown",
    "confluence",
    "mustache",
    "openapi",
    "api-documentation",
    "unicode",
    "turkish",
    "generator",
    "confytome"
  ],
  "author": "nae",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "standalone-generator.js",
    "cli.js",
    "utils/",
    "templates/",
    "README.md"
  ],
  "scripts": {
    "test": "echo \"Tests in main confytome package\" && exit 0",
    "standalone": "node cli.js",
    "lint": "eslint . --ext .js",
    "format": "eslint . --ext .js --fix",
    "clean": "rm -rf docs/* .cache",
    "validate": "npm ls",
    "prepublishOnly": "npm run validate"
  },
  "dependencies": {
    "mustache": "^4.2.0",
    "commander": "^14.0.1"
  },
  "peerDependencies": {
    "@confytome/core": "^1.4.0"
  },
  "peerDependenciesMeta": {
    "@confytome/core": {
      "optional": true
    }
  }
}
