{
    "name": "@confytome/core",
    "version": "1.3.0",
    "description": "Core plugin system and OpenAPI 3.0.3 generator from JSDoc comments. Plugin registry, service layer, and CLI for extensible API documentation generation.",
    "main": "generate-openapi.js",
    "exports": {
        ".": "./generate-openapi.js",
        "./utils/*": "./utils/*",
        "./services/*": "./services/*"
    },
    "bin": {
        "confytome": "cli.js"
    },
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/n-ae/confytome.git"
    },
    "bugs": {
        "url": "https://github.com/n-ae/confytome/issues"
    },
    "homepage": "https://github.com/n-ae/confytome#readme",
    "keywords": [
        "plugin-system",
        "generator-registry",
        "openapi",
        "jsdoc",
        "api-documentation",
        "swagger",
        "cli",
        "service-layer",
        "dependency-injection",
        "extensible",
        "core",
        "confytome"
    ],
    "author": "nae",
    "license": "MIT",
    "files": [
        "cli.js",
        "generate-openapi.js",
        "utils/",
        "services/",
        "templates/",
        "README.md",
        "CHANGELOG.md",
        "CONTRIBUTING.md",
        "SECURITY.md"
    ],
    "scripts": {
        "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
        "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
        "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
        "lint": "eslint . --ext .js",
        "format": "eslint . --ext .js --fix",
        "clean": "rm -rf docs/* .cache",
        "validate": "npm run lint && npm run test",
        "prepublishOnly": "npm run validate",
        "preversion": "npm run validate",
        "version": "git add -A .",
        "postversion": "git push && git push --tags",
        "security:check": "npm audit",
        "security:fix": "npm audit fix"
    },
    "dependencies": {
        "commander": "^14.0.0",
        "swagger-jsdoc": "^6.2.8",
        "glob": "^11.0.0"
    },
    "devDependencies": {
        "jest": "^30.1.3"
    }
}
