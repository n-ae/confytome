{
  "name": "confytome-workspace",
  "version": "1.4.1",
  "description": "Plugin-based API documentation generator with OpenAPI-first architecture. Generates Swagger UI, HTML, Markdown, and Postman collections from JSDoc comments.",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:core": "NODE_OPTIONS='--experimental-vm-modules' jest --selectProjects=\"@confytome/core\"",
    "test:generators": "NODE_OPTIONS='--experimental-vm-modules' jest --selectProjects=\"@confytome/generators\"",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "npm run lint:fix",
    "clean": "npm run clean --workspaces && rm -rf coverage",
    "validate": "npm run lint && npm run test",
    "version:bump": "node scripts/update-versions.js bump",
    "version:set": "node scripts/update-versions.js set",
    "publish": "npm run validate && npm publish --workspaces",
    "publish:dry-run": "npm publish --dry-run --workspaces"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n-ae/confytome.git"
  },
  "bugs": {
    "url": "https://github.com/n-ae/confytome/issues"
  },
  "homepage": "https://github.com/n-ae/confytome#readme",
  "keywords": [
    "api-documentation",
    "openapi",
    "swagger",
    "jsdoc",
    "markdown",
    "html",
    "postman",
    "plugin-system",
    "generator",
    "cli",
    "workspace",
    "confytome"
  ],
  "author": "nae",
  "license": "MIT",
  "devDependencies": {
    "@confytome/core": "workspace:*",
    "jest": "^30.1.3",
    "eslint": "^9.0.0"
  }
}
