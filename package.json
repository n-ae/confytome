{
  "name": "confytome-workspace",
  "version": "1.1.2",
  "description": "confytome workspace - modular API documentation generation ecosystem",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run test --workspaces",
    "test:core": "npm test --workspace=packages/core",
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "version:patch": "npm version patch --workspaces",
    "version:minor": "npm version minor --workspaces",
    "version:major": "npm version major --workspaces",
    "publish:dry": "npm publish --dry-run --workspaces",
    "publish:all": "npm publish --workspaces",
    "prepublish:validate": "npm run test && npm run publish:dry",
    "prepublishOnly": "npm run prepublish:validate",
    "dev:install": "npm install --workspaces",
    "dev:clean": "npm run clean && rm -rf node_modules",
    "dev:reset": "npm run dev:clean && npm run dev:install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n-ae/confytome.git"
  },
  "bugs": {
    "url": "https://github.com/n-ae/confytome/issues"
  },
  "homepage": "https://github.com/n-ae/confytome#readme",
  "keywords": [
    "workspace",
    "api-documentation",
    "openapi",
    "swagger",
    "confytome"
  ],
  "author": "nae",
  "license": "MIT",
  "devDependencies": {
    "@confytome/core": "workspace:*",
    "jest": "^30.1.3"
  }
}
