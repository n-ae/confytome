{
  "name": "confytome-workspace",
  "version": "1.1.2",
  "description": "Plugin-based API documentation generator with OpenAPI-first architecture. Generates Swagger UI, HTML, Markdown, and Postman collections from JSDoc comments.",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "test:core": "jest --selectProjects=\"@confytome/core\"",
    "test:generators": "jest --selectProjects=\"@confytome/generators\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "npm run lint:fix",
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces && rm -rf coverage",
    "validate": "npm run lint && npm run test",
    "docs:generate": "node docs/scripts/generate-readme.js",
    "docs:validate": "node docs/scripts/generate-readme.js --validate",
    "version:patch": "npm version patch --workspaces",
    "version:minor": "npm version minor --workspaces", 
    "version:major": "npm version major --workspaces",
    "publish:dry": "npm publish --dry-run --workspaces",
    "publish:all": "npm publish --workspaces",
    "prepublish:validate": "npm run validate && npm run publish:dry",
    "prepublishOnly": "npm run prepublish:validate",
    "dev:install": "npm install --workspaces",
    "dev:clean": "npm run clean && rm -rf node_modules",
    "dev:reset": "npm run dev:clean && npm run dev:install",
    "security:check": "npm audit",
    "security:fix": "npm audit fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n-ae/confytome.git"
  },
  "bugs": {
    "url": "https://github.com/n-ae/confytome/issues"
  },
  "homepage": "https://github.com/n-ae/confytome#readme",
  "keywords": [
    "api-documentation",
    "openapi",
    "swagger",
    "jsdoc",
    "markdown",
    "html",
    "postman",
    "plugin-system",
    "generator",
    "cli",
    "workspace",
    "confytome"
  ],
  "author": "nae",
  "license": "MIT",
  "devDependencies": {
    "@confytome/core": "workspace:*",
    "jest": "^30.1.3",
    "eslint": "^9.0.0"
  }
}
