{
  "name": "confytome-workspace",
  "version": "1.9.0",
  "description": "Plugin-based API documentation generator with OpenAPI-first architecture. Generates Swagger UI, HTML, Markdown, and Postman collections from JSDoc comments.",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules' jest && npm run test:standalone-markdown",
    "test:core": "npm test -- --selectProjects=\"@confytome/core\"",
    "test:generators": "npm test -- --selectProjects=\"@confytome/generators\"",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "clean": "npm run clean --workspaces --if-present && rm -rf coverage",
    "dev": "npm run clean && npm run validate",
    "validate": "npm run lint && npm test",
    "version:bump": "node scripts/update-versions.js bump",
    "version:set": "node scripts/update-versions.js set",
    "regenerate:cli": "node packages/generator/scripts/regenerate-cli-files.js",
    "regenerate:cli:validate": "npm run regenerate:cli -- --validate",
    "regenerate:readmes": "node packages/generator/scripts/regenerate-readmes.js",
    "regenerate:readmes:validate": "npm run regenerate:readmes -- --validate",
    "regenerate:readmes:quality": "node packages/generator/scripts/validate-readme-quality.js",
    "test:functionality": "node scripts/test-functionality.js",
    "test:standalone-markdown": "node tests/standalone-markdown.test.js",
    "test:all": "node tests/run-all-tests.js",
    "publish": "npm run validate && npm publish --workspaces --access public",
    "publish:dry-run": "npm publish --dry-run --workspaces --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n-ae/confytome.git"
  },
  "bugs": {
    "url": "https://github.com/n-ae/confytome/issues"
  },
  "homepage": "https://github.com/n-ae/confytome#readme",
  "keywords": [
    "api-documentation",
    "openapi",
    "swagger",
    "jsdoc",
    "markdown",
    "html",
    "postman",
    "plugin-system",
    "generator",
    "cli",
    "workspace",
    "confytome"
  ],
  "author": "nae",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "eslint": "^9.36.0",
    "jest": "^30.1.3"
  }
}
